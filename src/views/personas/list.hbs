<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Empleados</h3>
        {{#if personas}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark prueba">
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Depto.</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each personas}}
                <tr class="prueba">
                    <td>{{name}}</td>
                    <td>{{lastname}}</td>
                    <td>{{age}}</td>
                    <td>{{departament}}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/edit/{{id}}" class="btn btn-warning p-2 btn-mod"><i class="fa-solid fa-pencil"></i></a>
                            <a href="/delete/{{id}}" class="btn btn-danger p-2 btn-mod"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-primary fw-bold fs-4">
                    <td colspan="5">Registro de Empleados</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width:350px">
        <div class="card-header">
            <h3>Debes Crear un Empleado</h3>
        </div>
        <div class="card-body">
            <p>Presiona este bot√≥n para regitrar un nuevo empleado</p>
            <a href="/add" class="btn btn-primary">Ir a crear</a>
        </div>

        {{/if}}
    </div>
</div>